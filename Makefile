NAME = expertsystem

SRCS = check.c \
	check2.c \
	check3.c \
	check_multi_rules.c \
	check_rules.c \
	del_space.c \
	ft_calc.c \
	ft_engine.c \
	ft_list.c \
	ft_list2.c \
	ft_manage.c \
	ft_manage_calc.c \
	main.c

OBJS = $(SRCS:.c=.o)

LIB = -L libft/ -lft

CFLAGS = -Wall -Wextra -Werror -I libft -g

CC = gcc

RM = rm -rf

$(NAME):	$(OBJS)
			@make -C ./libft
			@$(CC)	-o $(NAME) $(OBJS) $(CFLAGS) $(LIB)
			@clear
			@echo "\033[1;30m  ___     ___-__________________________________________________________________________________________________________-\033[1;30m___     ___   "
			@echo "\033[1;30m / _ \===/ _ \                                                                                                          \033[1;30m/ _ \===/ _ \  "
			@echo "\033[1;30m( (.\ oOo /.) )                                                                                                       \033[1;30m ( (.\ oOo /.) ) "
			@echo "\033[1;30m \__/=====\__/                                                                                                         \033[1;30m \__/=====\__/  "
			@echo "\033[1;30m    |||||||                                                                                                                \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||    \033[5;33m   ___________                             __              _________               __ \033[0;33m                      \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||      \033[5;33m \_   _____/__  _________   ____________/  |_           /   _____/__.__. _______/  |_  ____   _____ \033[0;33m      \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||        \033[5;33m|    __)_\  \/  /\____ \_/ __ \_  __ \   __\  ______  \_____  <   |  |/  ___/\   __\/ __ \ /     \ \033[0;33m     \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||        \033[5;33m|        \>    < |  |_> >  ___/|  | \/|  |   /_____/  /        \___  |\___ \  |  | \  ___/|  Y Y  \ \033[0;33m    \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||       \033[5;33m/_______  /__/\_ \|   __/ \___  >__|   |__|           /_______  / ____/____  > |__|  \___  >__|_|  /\033[0;33m     \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||               \033[5;33m\/      \/|__|        \/                              \/\/         \/            \/      \/\033[0;33m      \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||                                                                                                                \033[1;30m|||||||     "
			@echo "\033[1;30m    |||||||                                                                                                                \033[1;30m|||||||     "
			@echo "\033[1;30m    (oOoOo)                                                                                                                \033[1;30m(oOoOo)     "
			@echo "\033[1;30m    J%%%%%L                                                                                                                \033[1;30mJ%%%%%L     "
			@echo "\033[1;30m   ZZZZZZZZZ______________________________________________________________________________________________________________\033[1;30mZZZZZZZZZ    "
			@echo "\033[1;0m\n"

all:	$(NAME)

clean:
		@make -C ./libft clean
		@$(RM) $(OBJS)
		@clear

fclean:	clean
		@make -C ./libft fclean
		@$(RM) $(NAME)
		@clear

re:	fclean all

.PHONY: all clean fclean re
